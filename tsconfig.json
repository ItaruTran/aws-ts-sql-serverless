{
  "compilerOptions": {
    "lib": ["es2017"],
    "allowJs": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "@constants/*": ["constants/*"],
      "@api/*": ["src/api/*"],
      "@connectors/*": ["src/connectors/*"],
      "@typings": ["src/typings/*"],
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
